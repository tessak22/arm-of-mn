<?xml version="1.0" encoding="utf-8"?>
<extension type="file" version="3.5.0" method="upgrade" mosetsExtension="mtreeFieldtype">
	<name>texteditor</name>
	<caption>Text</caption>
	<author>Lee Cher Yeong</author>
	<creationDate>February 2014</creationDate>
	<copyright>(C) 2012-2014 Mosets Consulting. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>mtree@mosets.com</authorEmail>
	<authorUrl>www.mosets.com</authorUrl>
	<version>3.5.0</version>
	<description>A text editor.</description>
	<useElements>0</useElements>
	<useSize>1</useSize>
	<taggable>0</taggable>
	<fileset>
		<files folder="." target="administrator/components/com_mtree/fieldtypes/texteditor">
			<filename>texteditor.php</filename>
			<filename>texteditor.xml</filename>
			<filename>index.html</filename>
		</files>
	</fileset>
	<config>
		<fields>
			<fieldset name="basic">
				<field name="width" type="text" default="100%" label="Width" />
				<field name="height" type="text" default="200px" label="Height" />
				<field name="loadButtons" type="radio" default="0" class="btn-group" label="Load Buttons" description="If set to yes, all editor buttons (except pagebreak and readmore) will be loaded.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension">http://update.mosets.com/mtree/fieldtypes/texteditor.xml</server>
	</updateservers>
</extension>