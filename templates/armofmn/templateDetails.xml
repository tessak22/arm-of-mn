<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="2.5"
	type="template"
	method="upgrade"
	client="site">
	<name>Arm of MN</name>
	<creationDate>05/19/2015</creationDate>
	<author>Windmill Design</author>
	<authorEmail>tessa@windmilldesign.com</authorEmail>
	<authorUrl>http://windmilldesign.com</authorUrl>
	<copyright>Copyright 2015</copyright>
	<license>GNU/GPL - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.0.0</version>
	<description>Custom Joomla Template by Windmill Design</description>

	<files>
		<folder>html</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>fonts</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>index.html</filename>
		<filename>favicon.ico</filename>
		<filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
	</files>

	<positions>
		<position>menu</position>
		<position>search</position>
		<position>sidebar</position>
		<position>slider</position>
		<position>featured-project</position>
		<position>menu-bar</position>
		<position>upcoming-events</position>
		<position>custom-content</position>
		<position>before-content</position>
		<position>after-content</position>
		<position>bye-bye</position>
		<position>feature1</position>
		<position>feature2</position>
		<position>feature3</position>
		<position>footer-logos</position>
		<position>footer-menu</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jumbotron.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jumbotron.sys.ini</language>
	</languages>

	<config>
        <fields name="params">
            <fieldset name="general" label="General">

            	<field name="logo" type="media"
					label="TPL_JUMBOTRON_FIELD_LOGO_LABEL" description="TPL_JUMBOTRON_FIELD_LOGO_DESC" />

				<field name="logotext"  type="text" default="Justified Nav Template"
					label="TPL_JUMBOTRON_FIELD_LOGOTEXT_LABEL"
					description="TPL_JUMBOTRON_FIELD_LOGOTEXT_DESC"
					filter="string" />

					 <field name="show_frontpage_component" type="list" default="0"
                       label="TPL_JUMBOTRON_FIELD_SHOW_FRONTPAGE_COMPONENT_LABEL"
                       description="TPL_JUMBOTRON_FIELD_SHOW_FRONTPAGE_COMPONENT_DESC"
                       filter="word">
                    	<option value="0">TPL_JUMBOTRON_OPTION_NO</option>
                    	<option value="1">TPL_JUMBOTRON_OPTION_YES</option>
                </field>

				<field name="copyright"  type="text" default="Copyright 2014, All Rights Reserved"
                       label="TPL_JUMBOTRON_FIELD_COPYRIGHT_LABEL"
                       description="TPL_JUMBOTRON_FIELD_COPYRIGHT_DESC"
                       filter="string" />

                <field name="includejquery" type="list" default="1"
                       label="TPL_JUMBOTRON_FIELD_INCLUDEJQUERY_LABEL"
                       description="TPL_JUMBOTRON_FIELD_INCLUDEJQUERY_DESC"
                       filter="word">
                    	<option value="0">TPL_JUMBOTRON_OPTION_NO</option>
                    	<option value="1">TPL_JUMBOTRON_OPTION_YES</option>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>
